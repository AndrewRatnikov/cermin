extends layout

block content
  form.login(method="post")
    h1= title
    - if (error)
      div.alert= error 
    div
      label(for="name") Name
      input(type="text", name="name", id="name", required)
    div
      label(for="password") Password
      input(type="password", name="password", id="password", required)
    div
      button(type="submit") Submit