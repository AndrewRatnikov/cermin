extends ../layout

block content
    form.login-form.jumbotron.form-horizontal(method="post")
        h2.text-center= title
        if (hasErr)
            .alert.alert-danger(role="alert")= error
        .form-group
            label.col-sm-2.control-label(for="email") Email:
            .col-sm-10
                input.form-control(type="email", name="email", id="email", placeholder="example@example.com" required)
        .form-group
            label.col-sm-2.control-label(for="password") Password:
            .col-sm-10
                input.form-control(type="password", name="password", id="password", placeholder="Password" required)
        .form-group
            .col-sm-10.col-sm-offset-2
                button.btn.btn-success(type="submit") Submit
    
    
