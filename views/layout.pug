doctype html
html
    head
        meta(charset="utf-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1")
        title= title
        link(rel='stylesheet', href='/bootstrap/dist/css/bootstrap.min.css')
        link(rel='stylesheet', href='/bootstrap/dist/css/bootstrap-theme.min.css')
        link(rel='stylesheet', href='/stylesheets/style.css')
    body

        .container-fluid
            if (isLogged)
                nav.navbar.navbar-default
                    .container-fluid
                        .navbar-header
                            button.navbar-toggle.collapsed(type="button", data-toggle="collapse", data-target="#navbar-collapse", aria-expanded="false")
                                span.sr-only Toggle navigation
                                each i in [0, 1, 2]
                                    span.icon-bar
                            a.navbar-brand(href="/") Brand
                        #navbar-collapse.collapse.navbar-collapse
                            ul.nav.navbar-nav.navbar-right
                                li.dropdown
                                    a.dropdown-toggle(href="#", data-toggle="dropdown", role="button", aria-haspopup="true", aria-expanded="false") #{email} &nbsp;
                                        span.caret
                                    ul.dropdown-menu
                                        li
                                            a(href="/admin/profile/" + id) Profile
                                        li
                                            a(href="/admin/logout") Logout
                                li
                                    a(href="/admin/register") Register user
                                li
                                    a(href="/admin/deluser") Delete user


            block content

        script(src="/jquery/dist/jquery.min.js")
        script(src="/bootstrap/dist/js/bootstrap.min.js")
        if (isLogged)
            script(src="/javascript/admin.js")
