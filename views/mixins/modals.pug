mixin changeAvatar
    #change-avatar.modal.fade(tabindex="-1", role = "dialog")
        .modal-dialog(role="document")
            form.modal-content(action="/admin/profile/" + id + "/uploadavatar", method="post", enctype="multipart/form-data")
                .modal-header
                    button.close(type="button", data-dismiss="modal", aria-label="Close")
                        span(aria-hidden="true") &times;
                    h2 Change avatar
                .modal-body
                    .input-group
                        label.input-group-btn.upload-files
                            label.btn.btn-primary(for="upload-avatar") Browse
                            input#upload-avatar(type="file", name="uploadAvatar")
                        input.form-control(type="text", disabled)
                .modal-footer
                    button.btn.btn-success(type="submit") Submit

mixin changePersonalData
